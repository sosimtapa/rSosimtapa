<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridLayout
        android:columnCount="3"
        android:rowCount="1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity ="center"
        android:background="#ffffff"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:id="@+id/btn_top1"
            android:columnCount="0"
            android:rowCount="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="community"
            android:background="#ffffff"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_top2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="voice"
            android:background="#ffffff"
            android:textColor="#000000"
            android:textSize="12dp"
            android:columnCount="1"
            android:rowCount="0"
            android:layout_gravity="center"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_top3"
            android:columnCount="0"
            android:rowCount="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="script"
            android:background="#ffffff"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_gravity="center"
            style="?android:attr/borderlessButtonStyle"/>
    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="상황별 대본"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
//스크롤뷰 추가

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:orientation="horizontal"

                >
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/radius"
                    android:elevation="5dp"
                    android:orientation="vertical"

                    >

                    <Button
                        android:id="@+id/deliBtn"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/deli"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="배달" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/radius"
                    android:elevation="5dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/rode"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/rr" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="거리" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/radius"
                    android:elevation="5dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/foodBtn"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/rest" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="식당" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/radius"
                    android:elevation="5dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/libBtn"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/study" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="도서관" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/radius"
                    android:elevation="5dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/transBtn"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/trains" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="대중교통" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/radius"
                    android:elevation="5dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/script_last"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/classroom" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="학교" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>