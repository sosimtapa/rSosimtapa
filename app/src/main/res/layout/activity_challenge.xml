<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="#CC99FF"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="소심타파 챌린지"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="소심타파들을 위한 챌린지 TOP8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="normal"
            android:layout_marginBottom="40dp"
            android:text="기초부터 차근차근 소심을 타파해줄 리스트와 함께해봐요"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/bus"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:id="@+id/CImgStep1_1"
                android:layout_width="200dp"
                android:layout_height="200dp" />
            <ImageView
                android:src="@drawable/restaurants"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:id="@+id/CImgStep1_2"
                android:layout_width="200dp"
                android:layout_height="200dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/mind"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:id="@+id/CImgStep1_3"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <ImageView
                android:id="@+id/CImgStep1_4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/thearter" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/bus"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:id="@+id/CImgStep1_5"
                android:layout_width="200dp"
                android:layout_height="200dp" />
            <ImageView
                android:src="@drawable/restaurantorder"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:id="@+id/CImgStep1_6"
                android:layout_width="200dp"
                android:layout_height="200dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/clothes"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:id="@+id/CImgStep1_7"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <ImageView
                android:id="@+id/CImgStep1_8"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/workplace" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
